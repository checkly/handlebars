{
  "name": "@checkly/handlebars",
  "version": "0.0.5",
  "description": "A Handlebars wrapper that adds a few helpers",
  "keywords": [
    "checkly",
    "handlebars",
    "helpers"
  ],
  "main": "dist/checkly-handlebars.js",
  "module": "dist/checkly-handlebars.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Checkly Inc. <info@checklyhq.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/checkly/handlebars"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "rollup src/checkly-handlebars.js --file dist/checkly-handlebars.js --format umd --name \"ChecklyHandlebars\"",
    "pretest": "npm run build",
    "test": "echo 'no public tests'",
    "prebuild": "rimraf dist",
    "commit": "git-cz",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.150",
    "@types/lodash.random": "^3.2.6",
    "@types/node": "^10.11.0",
    "@types/uuid": "^7.0.2",
    "colors": "^1.3.2",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^1.0.1",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^1.29.0"
  },
  "dependencies": {
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "lodash.random": "^3.2.0",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
